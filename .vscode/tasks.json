{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "backend:dev",
      "type": "shell",
      "command": "./mvnw spring-boot:run",
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "problemMatcher": "$tsc",
      "group": "build"
    },
    {
      "label": "frontend:dev",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/web"
      },
      "isBackground": true,
      "problemMatcher": "$tsc",
      "group": "build"
    }
  ]
}
