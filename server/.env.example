# Spring Boot backend env
PORT=8080
DATABASE_URL=jdbc:mysql://localhost:3306/lifedb?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC
DATABASE_DRIVER=com.mysql.cj.jdbc.Driver
HIBERNATE_DIALECT=org.hibernate.dialect.MySQLDialect
SPRING_DATASOURCE_USERNAME=root
SPRING_DATASOURCE_PASSWORD=changeme
JWT_SECRET=change-this-secret-to-strong-base64
JWT_EXPIRATION_SECONDS=3600
FRONTEND_URL=http://localhost:5173
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8080/login/oauth2/code/google

# Outbound mail (optional)
SPRING_MAIL_HOST=smtp.gmail.com
SPRING_MAIL_PORT=587
SPRING_MAIL_USERNAME=
SPRING_MAIL_PASSWORD=
SPRING_MAIL_PROPERTIES_MAIL_SMTP_AUTH=
SPRING_MAIL_PROPERTIES_MAIL_SMTP_STARTTLS_ENABLE=

# Feature flags
FEATURE_EMAIL_REMINDERS_ENABLED=false

# File uploads
APP_UPLOAD_DIR=uploads
APP_UPLOAD_PUBLIC_BASE=/uploads
